{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": [
      "esnext",
      "es6"
    ],
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,

    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}